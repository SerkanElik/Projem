@using PagedList
@using PagedList.Mvc*@
@model List<Customers>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
<style>
    th {
        text-align: center;
    }
</style>
<table class="table table-bordered" style="text-align:center;" id="tbl">
    <thead>
        <tr>
            <th hidden>CUSTOMER ID</th>
            <th>CUSTOMER NAME</th>
            <th>CUSTOMER SURNAME</th>
            <th>DETAILS</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td hidden>@item.CUSTOMERID</td>
                <td>@item.CUSTOMERNAME</td>
                <td>@item.CUSTOMERSURNAME</td>
                @*/Category/Delete/ dosyasına git @item.CATEGORYID sini gönder o methoda ve id ye göre sil*@
                @*<td><a href="/Customer/Delete/@item.CUSTOMERID" class="btn btn-danger">DELETE</a></td>*@

                @* ActionLink ile sil butonunda sil dediğimizde evet hayır çıkıyor evet dersek delete metoduna ıdyi gönderiyor ve siliyor hayır dersek sayfayı dönderiyor*@
                <td>
                    @Html.ActionLink("DELETE", "Delete", new { id = item.CUSTOMERID }, new { @class = "btn btn-danger", onclick = "return confirm('Do you want to DELETE?')" })

                    @*/Category/Update/ dosyasına git @item.CATEGORYID sini gönder o metoda ve id ye göre güncelle*@
                    <a href="/Customer/Update/@item.CUSTOMERID" class="btn btn-success">UPDATE</a>
                </td>
            </tr>
        }
    </tbody>
</table>
